<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.volie.wallhalla.view.fragment.FeedFragment"
        android:label="Feed" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.volie.wallhalla.view.fragment.FavoriteFragment"
        android:label="Favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
        <action
            android:id="@+id/action_favoriteFragment_to_videoPlayWebFragment"
            app:destination="@id/videoPlayWebFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.volie.wallhalla.view.fragment.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.volie.wallhalla.view.fragment.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/collectionFragment"
        android:name="com.volie.wallhalla.view.fragment.CollectionFragment"
        android:label="CollectionFragment">
        <action
            android:id="@+id/action_collectionFragment_to_collectionFeedFragment"
            app:destination="@id/collectionFeedFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.volie.wallhalla.view.fragment.SettingFragment"
        android:label="SettingFragment">
        <action
            android:id="@+id/action_settingFragment_to_photographerFragment"
            app:destination="@id/photographerFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.volie.wallhalla.view.fragment.PhotoDetailsFragment"
        android:label="PhotoDetailsFragment">
        <action
            android:id="@+id/action_photoDetailsFragment_to_photographerFragment"
            app:destination="@id/photographerFragment" />
        <argument
            android:name="media"
            app:argType="com.volie.wallhalla.data.model.Media" />
    </fragment>
    <fragment
        android:id="@+id/photographerFragment"
        android:name="com.volie.wallhalla.view.fragment.PhotographerFragment"
        android:label="PhotographerFragment">
        <argument
            android:name="photographerUrl"
            android:defaultValue="https://www.pexels.com"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/collectionPhotoFragment"
        android:name="com.volie.wallhalla.view.fragment.CollectionPhotoFragment"
        android:label="CollectionFeedFragment" />
    <fragment
        android:id="@+id/collectionFeedFragment"
        android:name="com.volie.wallhalla.view.fragment.CollectionFeedFragment"
        android:label="CollectionFeedFragment">
        <action
            android:id="@+id/action_collectionFeedFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
        <argument
            android:name="info"
            app:argType="com.volie.wallhalla.data.model.Collection" />
        <action
            android:id="@+id/action_collectionFeedFragment_to_videoPlayWebFragment"
            app:destination="@id/videoPlayWebFragment" />
    </fragment>
    <fragment
        android:id="@+id/collectionVideoFragment"
        android:name="com.volie.wallhalla.view.fragment.CollectionVideoFragment"
        android:label="CollectionVideoFragment" />
    <fragment
        android:id="@+id/videoPlayWebFragment"
        android:name="com.volie.wallhalla.view.fragment.VideoPlayWebFragment"
        android:label="VideoPlayWebFragment">
        <argument
            android:name="videoUrl"
            app:argType="com.volie.wallhalla.data.model.Media" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.volie.wallhalla.view.fragment.SplashScreenFragment"
        android:label="SplashScreenFragment">
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>
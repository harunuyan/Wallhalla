<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.volie.wallhalla.view.fragment.FeedFragment"
        android:label="Feed" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.volie.wallhalla.view.fragment.FavoriteFragment"
        android:label="Favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.volie.wallhalla.view.fragment.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.volie.wallhalla.view.fragment.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/collectionFragment"
        android:name="com.volie.wallhalla.view.fragment.CollectionFragment"
        android:label="CollectionFragment">
        <action
            android:id="@+id/action_collectionFragment_to_collectionFeedFragment"
            app:destination="@id/collectionFeedFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.volie.wallhalla.view.fragment.SettingFragment"
        android:label="SettingFragment" />
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.volie.wallhalla.view.fragment.PhotoDetailsFragment"
        android:label="PhotoDetailsFragment">
        <argument
            android:name="info"
            app:argType="com.volie.wallhalla.data.model.Photo" />
        <action
            android:id="@+id/action_photoDetailsFragment_to_photographerFragment"
            app:destination="@id/photographerFragment" />
    </fragment>
    <fragment
        android:id="@+id/photographerFragment"
        android:name="com.volie.wallhalla.view.fragment.PhotographerFragment"
        android:label="PhotographerFragment">
        <argument
            android:name="photographerUrl"
            android:defaultValue="https://www.pexels.com"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/collectionFeedFragment"
        android:name="com.volie.wallhalla.view.fragment.CollectionFeedFragment"
        android:label="CollectionFeedFragment" />
</navigation>